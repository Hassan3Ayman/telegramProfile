<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000">
       <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/circle_image"
                motion:framePosition="35"
                android:alpha="1"/>
           <KeyAttribute
               motion:motionTarget="@+id/circle_image"
               motion:framePosition="20"
               android:alpha="0"/>
           <KeyAttribute
               motion:motionTarget="@+id/circle_image"
               motion:framePosition="25"
               android:alpha="0"/>
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="35"
               android:alpha="0"/>
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="29"
               android:alpha="0"/>
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="20"
               android:alpha="1"/>
       </KeyFrameSet>

        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/circle_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="@id/container"
            motion:layout_constraintStart_toStartOf="@+id/container"
            motion:layout_constraintEnd_toEndOf="@id/container"
            motion:layout_constraintTop_toTopOf="@id/container"/>
        <Constraint
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/container"
            motion:layout_constraintStart_toStartOf="@+id/container"
            motion:layout_constraintEnd_toEndOf="@id/container"
            motion:layout_constraintTop_toTopOf="@id/container"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/container"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@+id/back_arrow"
            motion:layout_constraintStart_toStartOf="@+id/container"
            motion:layout_constraintBaseline_toBottomOf="@id/container"
            android:layout_marginStart="16dp" />
        <Constraint
            android:id="@+id/circle_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            motion:layout_constraintTop_toBottomOf="@+id/back_arrow"
            motion:layout_constraintStart_toStartOf="@+id/container"
            motion:layout_constraintBaseline_toBottomOf="@id/container"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:layout_marginBottom="8dp"
            motion:layout_constraintVertical_bias="0.25" />
        <Constraint
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            motion:layout_constraintStart_toEndOf="@id/circle_image"
            motion:layout_constraintTop_toTopOf="@+id/circle_image"
            motion:layout_constraintBottom_toBottomOf="@+id/circle_image"
            motion:layout_constraintVertical_bias="0.5"/>
    </ConstraintSet>
</MotionScene>

